# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# DEFAULT: Local Postgres (Docker)
# These values match the defaults in docker-compose.yml
POSTGRES_HOST=localhost
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=biwenger
POSTGRES_PORT=5432

# OPTIONAL: Supabase / Remote Postgres
# Uncomment DATABASE_URL to use a remote database instead of the local Docker one.
# This takes precedence over the individual variables above if set.
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/[DB]"

# ==========================================
# BIWENGER API CREDENTIALS
# ==========================================
# Obtain your token by logging into Biwenger Web and checking LocalStorage or network requests
BIWENGER_TOKEN=your_token_here
BIWENGER_LEAGUE_ID=your_league_id
BIWENGER_USER_ID=your_user_id

# ==========================================
# AI SERVICES
# ==========================================
# Get an API Key from Google AI Studio: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key

# ==========================================
# APPLICATION AUTH
# ==========================================
# Password to access the admin/sync dashboard
ACCESS_PASSWORD="changeme"
# Random string for session encryption (generate one with `openssl rand -base64 32`)
AUTH_SECRET="your_random_secret_string"
